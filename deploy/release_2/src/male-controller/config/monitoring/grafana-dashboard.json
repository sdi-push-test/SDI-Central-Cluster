{
  "dashboard": {
    "id": null,
    "title": "MALE Controller Dashboard",
    "tags": ["male-controller", "kubernetes", "ml"],
    "style": "dark",
    "timezone": "",
    "editable": true,
    "graphTooltip": 0,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(male_policy_applications_total, namespace)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "policy",
          "type": "query",
          "query": "label_values(male_policy_applications_total{namespace=~\"$namespace\"}, policy_name)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "MALE Policy Applications",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(male_policy_applications_total{status=\"success\",namespace=~\"$namespace\"}[1h]))",
            "legendFormat": "Successful"
          },
          {
            "expr": "sum(increase(male_policy_applications_total{status=\"failed\",namespace=~\"$namespace\"}[1h]))",
            "legendFormat": "Failed"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list",
              "orientation": "horizontal"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Active Policies by Namespace",
        "type": "stat",
        "targets": [
          {
            "expr": "male_active_policies_total",
            "legendFormat": "{{namespace}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "MALE Values Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "male_values_current{metric_type=\"accuracy\",namespace=~\"$namespace\"}",
            "legendFormat": "Accuracy - {{workload}}"
          },
          {
            "expr": "male_values_current{metric_type=\"latency\",namespace=~\"$namespace\"}",
            "legendFormat": "Latency - {{workload}}"
          },
          {
            "expr": "male_values_current{metric_type=\"energy\",namespace=~\"$namespace\"}",
            "legendFormat": "Energy - {{workload}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        },
        "yAxes": [
          {
            "min": 0,
            "max": 1000
          }
        ]
      },
      {
        "id": 4,
        "title": "Policy Application Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(male_policy_application_duration_seconds_bucket{namespace=~\"$namespace\"}[5m])) by (le))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(male_policy_application_duration_seconds_bucket{namespace=~\"$namespace\"}[5m])) by (le))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Cluster Profile Information",
        "type": "table",
        "targets": [
          {
            "expr": "male_cluster_profile_info",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Policy Success Rate",
        "type": "singlestat",
        "targets": [
          {
            "expr": "sum(increase(male_policy_applications_total{status=\"success\",namespace=~\"$namespace\"}[1h])) / sum(increase(male_policy_applications_total{namespace=~\"$namespace\"}[1h])) * 100"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 24
        },
        "valueName": "current",
        "format": "percent",
        "thresholds": "80,95"
      },
      {
        "id": 7,
        "title": "Controller Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"male-controller-metrics\"}",
            "legendFormat": "Controller"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 24
        }
      }
    ],
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1
  }
}